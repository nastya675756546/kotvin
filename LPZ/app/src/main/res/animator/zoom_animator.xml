<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"  android:background="@drawable/cloud_image">
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="1.2" android:duration="100" />
            <objectAnimator android:propertyName="scaleY" android:valueTo="1.2" android:duration="100" />
        </set>
    </item>
    <item  android:background="@drawable/cloud_image">
        <set >
            <objectAnimator android:propertyName="scaleX" android:valueTo="1.0" android:duration="100" />
            <objectAnimator android:propertyName="scaleY" android:valueTo="1.0" android:duration="100" />
        </set>
    </item>
</selector>